<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.vino.movies">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MoviesApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="false"
        android:theme="@style/AppTheme">
        <activity
            android:screenOrientation="portrait"
            android:name=".movies.MoviesActivity"
            android:label="@string/title_movies"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".movieinfo.MovieInfoActivity"
            android:label="@string/title_activity_movie_info"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:screenOrientation="portrait"
            android:name=".movieinfo.PersonsListActivity"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>